<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#06294c</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Theme.MyApp.Light" parent="Theme.MaterialComponents.Light">
        <item name="bg">@color/bg</item>
        <item name="text">@color/text</item>
        <item name="icon">@color/icon</item>
    </style>

    <style name="Theme.MyApp.Dark" parent="Theme.MaterialComponents.Dark">
        <item name="bg">@color/bgdark</item>
        <item name="text">@color/textdark</item>
        <item name="icon">@color/icon</item>
    </style>

</resources>
